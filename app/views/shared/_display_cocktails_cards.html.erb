<div class="categories">
  <div class="row">
    <% @cocktails.each do |cocktail| %>

      <div class="col-xs-12 col-sm-6 col-lg-3">

        <%= link_to cocktail do %>
          <div class="my-card" style="background-image: linear-gradient(rgba(0,0,0,0.2), rgba(0,0,0,0.1)), url('<%= cl_image_path cocktail.photo %>');">
            <div class="my-card-content">
              <h2><%= cocktail.name %></h2>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
